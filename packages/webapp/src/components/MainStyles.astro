<style is:global>
  /* all generic styles go here */
  @import 'https://unpkg.com/open-props';

  body {
    /* main colors are teal and grey */
    --paper-1: #ffffff;
    --paper-2: var(--teal-0);
    --paper-3: var(--teal-2);
    --paper-4: var(--teal-4);

    --ink-1: var(--gray-12);
    --ink-2: var(--gray-11);
    --ink-3: var(--teal-10);
    --ink-4: var(--teal-9);

    --primary-1: var(--teal-3);
    --primary-2: var(--teal-6);
    --primary-3: var(--teal-8);
    --primary-4: var(--teal-10);
  }

  body[data-theme='dark'] {
    /* main colors are teal and grey */
    --paper-1: var(--gray-12);
    --paper-2: var(--gray-10);
    --paper-3: var(--gray-8);
    --paper-4: var(--gray-6);

    --ink-1: var(--gray-1);
    --ink-2: var(--teal-1);
    --ink-3: var(--teal-3);
    --ink-4: var(--teal-6);

    --primary-1: var(--teal-10);
    --primary-2: var(--teal-8);
    --primary-3: var(--teal-6);
    --primary-4: var(--teal-3);
  }

  /* default forms */
  form {
    display: flex;
    flex-direction: column;
    gap: var(--size-3);
  }

  label {
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
    font-size: var(--font-size-1);
  }

  input,
  select,
  textarea {
    font-size: var(--font-size-1);
    padding: var(--size-2);
    border-radius: var(--radius-2);
    border: 1px solid var(--primary-1);
  }

  :is(input, select, textarea):focus {
    outline-offset: 4px;
    outline-color: var(--primary-3);
  }

  button,
  input[type='submit'] {
    padding: var(--size-2) var(--size-3);
    background: var(--paper-1);
    border: 1px solid var(--primary-1);
    border-radius: var(--radius-2);
    font-size: var(--font-size-1);
    cursor: pointer;
  }
</style>
